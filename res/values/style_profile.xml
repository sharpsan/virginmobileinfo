<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="all_saves">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="save_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="save_container.header">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="save">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="save.header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/med_grey</item>
        <item name="android:layout_alignParentRight">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="save.special">
        <item name="android:layout_alignParentRight">false</item>
    </style>

    <style name="mins_separator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="chart_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="chart" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:progressDrawable">@drawable/progress_high</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="hr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="status_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="last_updated">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- <item name="android:"></item> -->

</resources>